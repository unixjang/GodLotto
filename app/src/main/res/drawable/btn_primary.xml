<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/btn_primary_s" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <stroke
                android:width="@dimen/btn_stroke"
                android:color="@color/btn_primary_s_stroke" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/btn_primary_s_stroke" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <stroke
                android:width="@dimen/btn_stroke"
                android:color="@color/btn_primary_s" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/btn_primary_n" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <stroke
                android:width="@dimen/btn_stroke"
                android:color="@color/btn_primary_n_stroke" />
        </shape>
    </item>

</selector>